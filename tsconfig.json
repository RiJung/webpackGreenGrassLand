{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": ["es2017", "dom"],
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2018",
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "test/**/*"
    ]
}